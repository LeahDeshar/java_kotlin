<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_marginHorizontal="10dp"
    android:layout_height="match_parent"
    tools:context=".TableLayout">

    <TableLayout
        android:id="@+id/table1"
        android:stretchColumns="*"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TableRow
            android:layout_marginVertical="1dp"
            android:layout_marginHorizontal="1dp"
            android:layout_width="match_parent"

            >
            <TextView
                android:background="@color/black"
                android:textColor="@color/white"

                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_marginRight="1dp"
                android:text="Header 1" />
            <TextView
                android:background="@color/black"
                android:textColor="@color/white"

                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_marginRight="1dp"
                android:text="Header 1" />
            <TextView
                android:background="@color/black"
                android:textColor="@color/white"

                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:text="Header 1" />
        </TableRow>
        <TableRow
            android:paddingBottom="1dp"
            android:layout_width="match_parent"
            android:background="@color/black"
            >
            <TextView
               android:background="@color/white"

                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_marginRight="1dp"
                android:text="Label 1" />
            <TextView
                android:background="@color/white"
                android:layout_marginRight="1dp"
                android:padding="5dp"

                android:layout_height="wrap_content"
                android:text="Label 1" />
            <TextView
                android:background="@color/white"
                android:layout_marginRight="1dp"
                android:padding="5dp"

                android:layout_height="wrap_content"
                android:text="Label 1" />
        </TableRow>

        <TableRow
            android:paddingBottom="1dp"
            android:background="@color/black"  android:layout_marginBottom="1dp">
            <TextView
                android:layout_marginRight="1dp"
                android:padding="5dp"
                android:background="@color/white"

                android:layout_height="wrap_content"
                android:text="Label 2" />
            <TextView
                android:layout_marginRight="1dp"
                android:background="@color/white"
                android:padding="5dp"

                android:layout_height="wrap_content"
                android:text="Label 1" />

            <TextView
                android:background="@color/white"
                android:layout_marginRight="1dp"
                android:padding="5dp"

                android:layout_height="wrap_content"
                android:text="Label 1" />
        </TableRow>

        <TableRow
            android:paddingBottom="1dp"
            android:background="@color/black"
           >
            <TextView
                android:layout_marginRight="1dp"
                android:background="@color/white"

                android:padding="5dp"
                android:layout_height="wrap_content"
                android:text="Label 3" />
            <TextView
                android:layout_marginRight="1dp"
                android:background="@color/white"
                android:padding="5dp"

                android:layout_height="wrap_content"
                android:text="Label 1" />
            <TextView
                android:layout_marginRight="1dp"
                android:padding="5dp"
                android:background="@color/white"

                android:layout_height="wrap_content"
                android:text="Label 4" />
        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/table1"
        android:layout_marginTop="80dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_centerInParent="true"
        android:text="Second example" />

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:id="@+id/table3"
        android:background="@color/black"
        android:padding="1dp"
        android:stretchColumns="*">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:background="@color/white"
                android:layout_marginBottom="1dp"
                android:layout_marginHorizontal="1dp"
                android:padding="8dp"/>
            <TextView
                android:text="Label 2"
                android:layout_marginRight="1dp"
                android:gravity="center"
                android:background="@color/white"

                android:textColor="#000"
                android:padding="8dp"/>
            <TextView
                android:layout_span="2"
                android:background="@color/white"

                android:textColor="#000"
                android:padding="8dp"/>



        </TableRow>

        <!-- Row 2 with two cells -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="center"
                android:background="@color/white"
                android:layout_marginRight="1dp"
                android:textColor="#000"
                android:padding="8dp"/>

            <TextView
                android:text="Label 4"
                android:background="@color/white"
                android:layout_marginRight="1dp"

                android:textColor="#000"
                android:gravity="center"
                android:padding="8dp"/>
            <TextView
                android:text="Label 5"
                android:background="@color/white"
                android:layout_marginRight="1dp"

                android:textColor="#000"
                android:gravity="center"
                android:padding="8dp"/>
            <TextView
                android:background="@color/white"

                android:textColor="#000"
                android:gravity="center"
                android:padding="8dp"/>
        </TableRow>
    </TableLayout>


    <TextView
        android:id="@+id/header1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/table3"
        android:layout_marginTop="80dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_centerInParent="true"
        android:text="Third example" />
    <TableLayout
        android:id="@+id/table2"
        android:layout_below="@+id/header1"
        android:stretchColumns="*"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TableRow
            android:background="@color/black"

            android:layout_width="match_parent"

            >
            <TextView
                android:background="@color/white"
                android:textColor="@color/black"
android:layout_marginVertical="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="1dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_marginRight="1dp"
                android:text="Student Id" />
            <TextView
                android:background="@color/white"
                android:textColor="@color/black"

                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_marginTop="1dp"
                android:layout_marginRight="1dp"
                android:text="Name" />
            <TextView
                android:background="@color/white"
                android:textColor="@color/black"
                android:layout_marginTop="1dp"
                android:layout_marginRight="1dp"

                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:text="Address" />
            <TextView
                android:layout_marginTop="1dp"
                android:layout_marginRight="1dp"
                android:background="@color/white"
                android:textColor="@color/black"

                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:text="Gender" />
        </TableRow>
        <TableRow
            android:paddingBottom="1dp"
            android:layout_width="match_parent"
            android:background="@color/black"
            >
            <TextView
                android:background="@color/white"

                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_marginRight="1dp"
                android:layout_marginLeft="1dp"
                android:text="001" />
            <TextView
                android:background="@color/white"
                android:layout_marginRight="1dp"
                android:padding="5dp"

                android:layout_height="wrap_content"
                android:text="Ram Sharma" />
            <TextView
                android:background="@color/white"
                android:layout_marginRight="1dp"
                android:padding="5dp"

                android:layout_height="wrap_content"
                android:text="Birtamode" />
            <TextView
                android:background="@color/white"
                android:layout_marginRight="1dp"
                android:padding="5dp"

                android:layout_height="wrap_content"
                android:text="Male" />
        </TableRow>

        <TableRow
            android:paddingBottom="1dp"
            android:background="@color/black"  android:layout_marginBottom="1dp">
            <TextView
                android:layout_marginRight="1dp"
                android:padding="5dp"
                android:background="@color/white"
                android:layout_marginLeft="1dp"

                android:layout_height="wrap_content"
                android:text="002" />
            <TextView
                android:layout_marginRight="1dp"
                android:background="@color/white"
                android:padding="5dp"

                android:layout_height="wrap_content"
                android:text="Gita Sharma" />

            <TextView
                android:background="@color/white"
                android:layout_marginRight="1dp"
                android:padding="5dp"

                android:layout_height="wrap_content"
                android:text="Kathmandu" />
            <TextView
                android:background="@color/white"
                android:layout_marginRight="1dp"
                android:padding="5dp"

                android:layout_height="wrap_content"
                android:text="Female" />
        </TableRow>



    </TableLayout>


</RelativeLayout>